        <field name="sequence">15</field>
        <field name="name">net_profit</field>
        <field name="description">Net Profit</field>
        <field name="expression">-bale[('user_type_id','in',(ref('account.data_account_type_other_income').id,ref('account.data_account_type_revenue').id,ref('account.data_account_type_depreciation').id,ref('account.data_account_type_expenses').id,ref('account.data_account_type_direct_costs').id))]</field>
        <field name="type">num</field>
        <field name="accumulation_method">sum</field>
        <field name="budgetable">False</field>
        <field name="compare_method">pct</field>
        <field name="auto_expand_accounts">False</field>
    </record>


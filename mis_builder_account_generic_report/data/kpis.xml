<?xml version="1.0"?>
<odoo noupdate="1">

    <!-- Profit & Loss -->
    <record id="mis_report_kpi_income" model="mis.report.kpi">
        <field name="report_id" eval="ref('mis_builder_account_generic_report.mis_report_pl')"/>
        <field name="sequence">1</field>
        <field name="name">income</field>
        <field name="description">Income</field>
        <field name="expression">-bale[('user_type_id','=',ref('account.data_account_type_revenue').id)]</field>
        <field name="type">num</field>
        <field name="accumulation_method">sum</field>
        <field name="budgetable">False</field>
        <field name="compare_method">pct</field>
        <field name="auto_expand_accounts">True</field>
        <field name="auto_expand_accounts_style_id" eval="ref('mis_builder_account_generic_report.details')"/>
        <field name="style_id" eval="ref('mis_builder_account_generic_report.title')"/>
    </record>

    <record id="mis_report_kpi_cost_of_revenue" model="mis.report.kpi">
        <field name="report_id" eval="ref('mis_builder_account_generic_report.mis_report_pl')"/>
        <field name="sequence">2</field>
        <field name="name">cost_of_revenue</field>
        <field name="description">Cost of Revenue</field>
        <field name="expression">-bale[('user_type_id','=',ref('account.data_account_type_direct_costs').id)]</field>
        <field name="type">num</field>
        <field name="accumulation_method">sum</field>
        <field name="budgetable">False</field>
        <field name="compare_method">pct</field>
        <field name="auto_expand_accounts">True</field>
        <field name="auto_expand_accounts_style_id" eval="ref('mis_builder_account_generic_report.details')"/>
    </record>

    <record id="mis_report_kpi_gross_profit" model="mis.report.kpi">
        <field name="report_id" eval="ref('mis_builder_account_generic_report.mis_report_pl')"/>
        <field name="sequence">3</field>
        <field name="name">gross_profit</field>
        <field name="description">Gross Profit</field>
        <field name="expression">income+cost_of_revenue</field>
        <field name="type">num</field>
        <field name="accumulation_method">sum</field>
        <field name="budgetable">False</field>
        <field name="compare_method">pct</field>
        <field name="auto_expand_accounts">False</field>
        <field name="style_id" eval="ref('mis_builder_account_generic_report.title')"/>

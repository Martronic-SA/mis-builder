    <record id="mis_report_kpi_net_profit" model="mis.report.kpi">
        <field name="report_id" eval="ref('mis_builder_account_generic_report.mis_report_pl')"/>
        <field name="sequence">7</field>
        <field name="name">net_profit</field>
        <field name="description">Net Profit</field>
